doctype html
html(lang = "ko")
    head
        title #{pageTitle} | Wetube
        link(link rel="stylesheet" href="https://unpkg.com/mvp.css") 

    body
        header
            h1=pageTitle
            nav 
                ul 
                    li
                        a(href="/videos/upload") Upload Video
                    li 
                        a(href="/") Home
                    li 
                        a(href="/search") Search
                    if loggedIn
                        li
                            a(href="/logout") Logout 
                        li 
                            img(src=`${loggedInUser.avatarUrl}`, alt="")
                            a(href="/my-profile") see #{loggedInUser.name}'s profile
                        li 
                            a(href="/users/edit") Edit Profile 
                    else
                        li 
                            a(href="/join") Join
                        li 
                            a(href="/login") Login
                    
        main
            block content
        include partials/footer