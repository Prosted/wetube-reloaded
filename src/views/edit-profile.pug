extends base

block content
    if errorMessage 
        span=errorMessage
    img(src=`${loggedInUser.socialOnly ? loggedInUser.avatarUrl : `/${loggedInUser.avatarUrl}`}`, alt="" width="100", height="100")
    form(method="POST", enctype="multipart/form-data")
        label(for="avatar") Avatar 
        input(type="file", id="avatar" name="avatar", accept="image/*")
        input(name="name", type="text", required, placeholder="Name"  value=loggedInUser.name)
        input(name="email", type="email", required, placeholder="Email" value=loggedInUser.email)
        input(name="userName", type="text", required, placeholder="User Name" value=loggedInUser.userName)
        input(name="location", type="text", required, placeholder="Location" value=loggedInUser.location)
        input(type="submit", value="Save")
        if !loggedInUser.socialOnly
            hr
            a(href="change-password") Change Password &rarr;