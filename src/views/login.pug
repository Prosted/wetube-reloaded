extends base

block content 
    if errorMessage
        span=errorMessage
    form(action="", method="POST")
        input(name="email" type="text", placeholder="email")
        input(name="password" type="password", placeholder="password")
        input(type="submit", value="Login")
        a(href="https://github.com/login/oauth/authorize?client_id=e3cc56e9a1172bedfcaa&allow_signup=false") Continue with github &rarr;
    
    hr 
    div 
        h5 Don't you have an account?
        a(href="/join") Create one now &rarr;
